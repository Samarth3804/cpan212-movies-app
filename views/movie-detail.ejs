<%- include('partials/header') %>

<div class="movie-detail">
  <h1><%= movie.name %> (<%= movie.year %>)</h1>

  <% if (movie.poster) { %>
    <img src="<%= movie.poster %>" alt="<%= movie.name %> poster" style="max-width: 300px; border-radius: 10px;">
  <% } else { %>
    <p><em>No poster available</em></p>
  <% } %>

  <p><strong>Description:</strong><br><%= movie.description %></p>
  <p><strong>Genres:</strong> <%= movie.genres %></p>
  <p><strong>Rating:</strong> <%= movie.rating %> / 10</p>

  <hr>

  <!-- Only the owner can edit or delete -->
  <% if (userId && movie.createdBy.toString() === userId) { %>
    <a href="/edit/<%= movie._id %>" class="btn">Edit Movie</a>

    <form action="/delete/<%= movie._id %>" method="POST" style="display:inline;">
      <button type="submit" class="btn danger" 
              onclick="return confirm('Are you sure you want to delete this movie?')">
        Delete Movie
      </button>
    </form>
  <% } %>

  <br><br>
  <a href="/">‚Üê Back to All Movies</a>
</div>

<%- include('partials/footer') %>